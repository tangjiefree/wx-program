/* pages/flash/flash.wxss */
.container {
  background:#febd42;
  height: 100%;
}

.middle {
  background: #fff;
  border-radius: 30rpx;
  overflow: hidden;
  width: 98%;
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  margin: 20rpx auto;
}

.middleImg {
  width: 140rpx;
  height: 110rpx;
}

.middle .block {
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  color:#666;
  justify-content: space-around;
}

.middle .black {
  color: #000;
}

.middle .active {
  color: #fff;
  background: linear-gradient(#ffb166,#ff5e62);
  border-radius: 20rpx;
  /* position: relative; */
}
