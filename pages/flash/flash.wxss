.middle .block text {
  font-weight: bold;
}

.list {
  width: 98%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
}

.list .block {
  border-radius: 30rpx;
  padding: 0 30rpx;
  width: 100%;
  height: 250rpx;
  background: #fff;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.list .block .bottom {
  display: flex;
}

.list .block .bottom .one {
  display: flex;
  flex-direction: column;
  height: 180rpx;
  justify-content: space-between;
  margin-right: 30rpx;
}

.list .block .bottom .one text:nth-child(2) {
  font-size: 12pt;
  color: #ff261d;
}

.bottom {
  display: flex;
  justify-content: space-between;
}

.bottom .two {
  width: 60%;
}
.bottom image {
  width: 100%;
  height: 180rpx;
}