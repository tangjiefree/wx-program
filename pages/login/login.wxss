/* pages/login/login.wxss */
page,
.whole {
  width: 100%;
  height: 100%;
  position: relative;
}

.whole .bg {
  width: 100%;
  height: 100%;
}

.whole .content {
  position: absolute;
  width: 80%;
  top: 150rpx;
  left: 50%;
  transform: translateX(-50%);
}

.whole .content .label {
  display: flex;
  border-bottom: 2rpx solid #ccc;
  width: 100%;
  height: 100rpx;
  margin-bottom: 50rpx;
}
.whole .content .label text {
  font-size: 20pt;
  color: #308cff;
  margin-right: 50rpx;
}
